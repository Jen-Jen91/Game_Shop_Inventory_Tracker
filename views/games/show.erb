<section class="show">

  <h1><%= @game.title %></h1>

  <p><%= @game.description %></p>
  <br>
  <p>Stock: <%= @game.stock_quantity %></p>
  <p>Cost: <%= @game.buying_cost %></p>
  <p>Selling Price: <%= @game.selling_price %></p>

  <p>Publisher: <%= @game.publisher_id %></p>


  <button type="button">
    <a href="/games/<%= @game.id %>/edit">Edit Game</a>
  </button>

  <form action="/games/<%= @game.id %>/delete" method="POST"><input type="submit" value="Delete" class="button"></form>

</section>
