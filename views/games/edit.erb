<h1>Edit Game</h1>

<form action="/games/<%= @game.id %>" method="post" class="edit">

  <label for="title-field">Title:</label>
  <input type="text" name="title" id="title-field" value=" <%= @game.title %>">

  <br><br>

  <textarea name="description" rows="4" cols="50"> <%= @game.description %></textarea>

  <br><br>

  <label for="genre-field">Genre:</label>
  <input type="text" name="genre" id="genre-field" value=" <%= @game.genre %>">

  <br><br>

  <label for="stock-field">Stock:</label>
  <input type="number" name="stock_quantity" id="stock-field" min="0" value="<%= @game.stock_quantity %>">

  <br><br>

  <label for="cost-field">Cost: £</label>
  <input type="number" name="buying_cost" id="cost-field" min="1" value="<%= @game.buying_cost %>">

  <br><br>

  <label for="price-field">Price: £</label>
  <input type="number" name="selling_price" id="price-field" min="1" value="<%= @game.selling_price %>">

  <br><br>

  <label for="publisher_select">Select Publisher:</label>
    <select name="publisher_id" id="publisher_select">
      <% @publishers.each do |publisher| %>
        <option value="<%= publisher.id %>" <%= "selected" if @game.publisher_id == publisher.id %>> <%= publisher.name %></option>
      <% end %>
    </select>

  <br><br>

  <label for="platform_select">Select Platforms(s):</label><br>
  <div class="checkbox">

    <% @platforms.each do |platform| %>
      <input type="checkbox" name="platform_ids[]" id="platform_select" value="<%= platform.id %>"><%= platform.name %><br>
    <% end %>

  </div>

  <br><br>

  <input type="submit" value="Submit Changes" class="button">

</form>
