<h1>All Video Games</h1>

<button type="button">
  <a href="/games/new">Add New Game</a>
</button>

<section class="index">

  <hr>
  <% for game in @games %>

  <p>Title: <a href="/games/<%= game.id %>"><%= game.title %></a></p>
  <p>Description: <%= game.description %></p>
  <p>Stock: <% if game.stock_quantity == 0 %></p>
    <p class="out-of-stock"><%= game.stock_quantity %></p>
  <% elsif game.stock_quantity <= 5%>
    <p class="low-stock"><%= game.stock_quantity %></p>
  <% else %>
    <p><%= game.stock_quantity %></p>
  <% end %>

  <p>Cost: £<%= game.buying_cost %></p>
  <p>Selling Price: £<%= game.selling_price %></p>
  <p>Publisher: <%= game.publisher.name  %></p>
  <hr>

  <% end %>

</section>
